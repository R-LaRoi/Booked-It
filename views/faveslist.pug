doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    link(rel='preconnect', href='https://fonts.googleapis.com')
    link(rel='preconnect', href='https://fonts.gstatic.com', crossorigin='')
    link(rel='stylesheet', href='styles.css')
    script(src='https://kit.fontawesome.com/3f93d2c0e4.js', crossorigin='anonymous')
    link(href="https://fonts.googleapis.com/css2?family=Archivo+Black&family=Archivo:wght@100;400&display=swap"
      rel="stylesheet")
   

    title Booked It
  body
    section
      .header
          div(class='title') BOOKED IT
            div(class='sm-txt') stay updated with the latest in literature
            form(method="get" action="/")
               button(type="submit") home
            form(method="get" action="/user_list")
               button(type="submit") your list   
    section 
      .userbooks
          each item in userFaves
                    .list
                            li #{item.title}
                            li #{item.author} 
                            li #{item.date_added} 
                            form(method="POST" action=`/deletebook/${item._id}`)
                            
                              button(type="submit") Delete



