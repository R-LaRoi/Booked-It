doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    link(rel='preconnect', href='https://fonts.googleapis.com')
    link(rel='preconnect', href='https://fonts.gstatic.com', crossorigin='')
    link(rel='stylesheet', href='styles.css')
    script(src='https://kit.fontawesome.com/3f93d2c0e4.js', crossorigin='anonymous')
    link(href="https://fonts.googleapis.com/css2?family=Archivo+Black&family=Archivo:wght@100;400&display=swap"
      rel="stylesheet")
   

    title Booked It
  body
    section
      .header
          div(class='title') BOOKED IT
            div(class='sm-txt') stay updated with the latest in literature
    .container
      .sec-one
        div(class='article-title') books our readers loved
          div(class='sm-txt')  SUMMER READS
          form(method="get" action="/user_list")
               button(type="submit") your list
          form(method="get" action="/favorite_list")   
               button(type="submit") favorites     
               
      .sec-two
        div(class='content-2') What would you like to read? explore our recommendations from our favorite writers and reders.    
   
    section    
      .book1
        each item in allTitles
                  .list
                          li #{item.title}
                          li #{item.author} 
                          li #{item.date_added}
                          form(method="POST" action=`/add_favorites/${item._id}`)
                                button(type="submit") star
                         
      