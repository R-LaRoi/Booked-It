doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    link(rel='preconnect', href='https://fonts.googleapis.com')
    link(rel='preconnect', href='https://fonts.gstatic.com', crossorigin='')
    link(rel='stylesheet', href='styles.css')
    script(src='https://kit.fontawesome.com/3f93d2c0e4.js', crossorigin='anonymous')
    link(href="https://fonts.googleapis.com/css2?family=Archivo+Black&family=Archivo:wght@100;400&display=swap"
      rel="stylesheet")
   

    title Booked It
  body
    section
      .header
          div(class='title') BOOKED IT
            div(class='sm-txt') stay updated with the latest in literature
            form(method="get" action="/")
               button(type="submit") home

      .container
        .sec-one
            div(class='article-title') YOUR BOOK LIST
              div(class='sm-txt')  LATEST TITLES
        .sec-two
          div(class='content-2') FAVORITES
            form(action="/submitroutine", method="post")
                      label(for="title") title:
                      br
                      input(type="title", id="title", name="title", required)
                      br
                      label(for="author") author:
                      br
                      input(type="text", id="author", name="author", required)
                      br
                      label(for="date_added") date:
                      input(type="text", id="date_added", name="date_added", required)
                      br

        
      .userbooks
          each item in userTitles
                    .list
                            li #{item.title}
                            li #{item.author} 
                            li #{item.date_added} 
                            form(method="delete" action="/deletebook")
                              button(type="submit") remove